{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta.1/schema.json",
  "vcs": { "enabled": true, "clientKind": "git" },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/dist",
      "!**/routeTree.gen.ts",
      "!**/worker-configuration.d.ts"
    ]
  },
  "formatter": { "enabled": true, "indentStyle": "space" },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useButtonType": "off"
      }
    },
    "includes": ["**"]
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  }
}
